{
  "version": 2,
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "builds": [
    {
      "src": "frontend/*/",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.)",
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/(.)",
      "dest": "/frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ]
}